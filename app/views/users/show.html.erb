<div class="container mt-4">
  <div class="row pt-3">
    <div class="right-container col-4 text-center">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar ,class: "avatar" %>
      <% else %>
        <%= image_tag ("no-image.png"),class: "avatar"%>
      <% end %>
    </div>
    <div class="left-container col-8">
      <h1 class="pt-3"><%= @user.username %></h1>
      <div class="profile-container">
        <%= @user.profile%>
      </div>
      <% if user_signed_in? && @user == current_user %>
        <%=link_to "プロフィール編集", edit_user_path%>
      <% end %>
    </div>
  </div>
</div>
