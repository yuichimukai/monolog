  <div class="container mb-5">
    <div class="user-login_container mt-5">
      <h1 class="page-title mb-4">
        ログイン
      </h1>
      <div class="mb-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :ユーザー名もしくはメールアドレス%>
            <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me ,checked: "checked" %>
                <%= f.label :ログイン情報を保存 %>
            <% end %>
          </div>

          <div class="actions text-center">
            <%= f.submit "ログイン", class: "btn btn-round btn-service w-50 text-white rounded-pill", data: {disable_with: "ログイン"} %>
          </div>
        <% end %>
      </div>
      <p class="text-center mt-4">
      <%= render "users/shared/links" %>
      </p>
    </div>
  </div>
