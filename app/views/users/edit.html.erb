<div class="container mb-5">
  <div class="user-login_container mt-5">
    <h1 class="page-title mb-4">
      プロフィール編集
    </h1>
    <div class="mb-4">
      <%= form_with model: @user do |f|%>
        <div class="form-group">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール写真 %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール%>
          <%= f.text_area :profile, class:"form-control" %>
        </div>
        <div class="actions text-center">
          <%= f.submit "変更する", class: "btn btn-round btn-service w-50 text-white rounded-pill", data: {disable_with: "変更"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
