<div class="container mb-5">
    <div class="user-login_container mt-5">
      <h1 class="page-title mb-4">
        新規登録
      </h1>
      <div class="mb-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :ユーザー名 %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード再確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="actions text-center mt-5">
            <%= f.submit "新規登録", class: "btn btn-round btn-service w-50 text-white rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
</div>
