<div class="container">
  <div class="mt-5">
    <h1 class="page-title mb-4">
      ユーザー
    </h1>
    <div class="users">
      <% @users.each do |user| %>
        <div class="user-list">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar , class: "avatar" %>
          <% else %>
            <%= image_tag ("no-image.png"),class: "avatar"%>
          <% end %>
          <%= link_to user.username, user %>
        </div>
      <% end %>
    </div>
  </div>
</div>
