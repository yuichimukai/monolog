<div class="container mt-5">
  <div class="micropost-new_container mt-3">
    <h1 class="page-title">
      投稿
    </h1>
    <div class="mb-4">
      <%= form_with model: @item, local:true do |f| %>
        <div class="item_image">
          <%= image_tag(@image)%>
        </div>
        <button>
          <%= link_to "リンク", @link %>
        </button>
        <div class="item_price">
          <%= @price%>円
        </div>
      <% end %>
    </div>
    <div class="back-container mb-2">
      <%= link_to "戻る", 'javascript:history.back()' %>
    </div>
  </div>
</div>
